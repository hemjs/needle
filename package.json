{
  "name": "@hemjs/needle",
  "version": "1.2.7",
  "description": "A fast and intuitive dependency injection container for JavaScript and Node.js",
  "author": "Augustus Kamau",
  "license": "MIT",
  "keywords": [
    "hemjs",
    "needle",
    "container",
    "dependency-injection"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "test": "jest",
    "test:cov": "jest --coverage",
    "prerelease": "npm run prebuild && npm run build",
    "release": "release-it",
    "prepare": "husky"
  },
  "devDependencies": {
    "@armscye/container": "0.5.0",
    "@armscye/core": "0.4.0",
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@eslint/js": "^9.13.0",
    "@types/jest": "30.0.0",
    "@types/node": "24.10.4",
    "@typescript-eslint/eslint-plugin": "8.50.1",
    "@typescript-eslint/parser": "8.50.1",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4",
    "release-it": "19.1.0",
    "rimraf": "6.1.2",
    "ts-jest": "29.4.6",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.11.0"
  },
  "homepage": "https://github.com/hemjs/needle#readme",
  "bugs": {
    "url": "https://github.com/hemjs/needle/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hemjs/needle.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
