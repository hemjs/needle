{
  "name": "@hemjs/needle",
  "version": "1.2.2",
  "description": "A fast and intuitive dependency injection container for JavaScript and Node.js",
  "author": "Augustus Kamau",
  "license": "MIT",
  "keywords": [
    "hemjs",
    "needle",
    "container",
    "dependency-injection"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "test": "jest",
    "test:cov": "jest --coverage",
    "prerelease": "npm run prebuild && npm run build",
    "release": "release-it",
    "prepare": "husky"
  },
  "devDependencies": {
    "@armscye/container": "0.5.0",
    "@armscye/core": "0.4.0",
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@eslint/js": "^9.13.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.10.2",
    "@typescript-eslint/eslint-plugin": "8.18.0",
    "@typescript-eslint/parser": "8.18.0",
    "eslint": "9.17.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "15.2.11",
    "prettier": "3.4.2",
    "release-it": "17.11.0",
    "rimraf": "6.0.1",
    "ts-jest": "29.2.5",
    "typescript": "5.7.3",
    "typescript-eslint": "^8.11.0"
  },
  "homepage": "https://github.com/hemjs/needle#readme",
  "bugs": {
    "url": "https://github.com/hemjs/needle/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hemjs/needle.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
